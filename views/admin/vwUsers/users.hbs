<!DOCTYPE html>
<html lang=en>

<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->

	<title>Báo Điện Tử TH16-News</title>

	<!-- Google font -->
	<link href="https://fonts.googleapis.com/css?family=Open+Sans:400,700%7CLato:300,400" rel="stylesheet">

	<!-- Bootstrap -->
	<link type="text/css" rel="stylesheet" href="/css/bootstrap.min.css" />

	<!-- Owl Carousel -->
	<link type="text/css" rel="stylesheet" href="/css/owl.carousel.css" />
	<link type="text/css" rel="stylesheet" href="css/owl.theme.default.css" />

	<!-- Font Awesome Icon -->
	<link rel="stylesheet" href="/css/font-awesome.min.css">

	<!-- Custom stlylesheet -->
	<link type="text/css" rel="stylesheet" href="/css/style.css" />
	<link rel="stylesheet" type="text/css" href="/css/administrator_category.css">
	<script src="/ckeditor/ckeditor.js"></script>



	<!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
	<!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
	<!--[if lt IE 9]>
		  <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
		  <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
		<![endif]-->
</head>

<body>
	<header id="header">
		<!-- Top Header -->
		<div id="top-header">
			<div class="container">
				<div class="header-links">
					<ul>
						<li><a href="/about">About us</a></li>
						<li><a href="/contact">Contact</a></li>

						<li><a href="/privacy">Privacy</a></li>
						<li>
							<form id="frmSignout" action="/account/logout" method="POST"></form>
						</li>
						{{#if isAuthenticated}}
						<li class="nav-item dropdown">
							<a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
								data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
								Hi, <b>{{authUser.username}}</b>
							</a>
							<div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
								<a class="dropdown-item" href="/account/profile">
									<i class="fa fa-user" aria-hidden="true"></i>
									Profile
								</a>
								<div class="dropdown-divider"></div>
								<a class="dropdown-item" href="javascript: $('#frmSignout').submit();">
									<i class="fa fa-sign-out" aria-hidden="true"></i>
									Sign Out
								</a>
							</div>
						</li>
						{{else}}
						<li class="nav-item">
						<li><a href="/account/signup"><i class="fa fa-user-plus"></i> SignUp</a></li>
						</li>
						<li class="nav-item">
						<li><a href="/account/login"><i class="fa fa-sign-in"></i> LogIn</a></li>
						</li>
						{{/if}}
					</ul>
				</div>
				<div class="header-social">
					<ul>
						<li><a href="#"><i class="fa fa-facebook"></i></a></li>
						<li><a href="#"><i class="fa fa-twitter"></i></a></li>
						<li><a href="#"><i class="fa fa-google-plus"></i></a></li>
						<li><a href="#"><i class="fa fa-instagram"></i></a></li>
						<li><a href="#"><i class="fa fa-youtube"></i></a></li>
					</ul>
				</div>
			</div>
		</div>
		<!-- /Top Header -->

		<!-- Center Header -->
		<div id="center-header">
			<div class="container">
				<div class="header-logo">
					<a href="/home" class="logo"><img src="/img/th16.png" alt="" width="182px" height="274px"></a>
				</div>

			</div>
		</div>
		<!-- /Center Header -->

		<!-- Nav Header -->
		<div id="nav-header">
			<div class="container">
				<nav id="main-nav">
					<div class="nav-logo">
						<a href="/home" class="logo"><img src="/img/logo-alt.png" alt=""></a>
					</div>
					<ul class="main-nav nav navbar-nav">
						<li><a href="/admin/categories">Chuyên mục</a></li>
						<li><a href="/admin/tags">Tag</a></li>
						<li><a href="/admin/posts">Bài viết</a></li>
						<li>
							<a href="/admin/users" data-toggle="dropdown">Người dùng <span
									class="fa fa-caret-down"></span></a>
							<ul class="dropdown-menu" aria-labelledby="dLabel">
								<li class="dropdown-li"><a href="/admin/users/writer">Writer</a></li>
								<li class="dropdown-li"><a href="/admin/users/editor">Editor</a></li>
								<li class="dropdown-li"><a href="/admin/users/subscriber">Subscriber</a></li>
								<li class="dropdown-li"><a href="/admin/users/user">User</a></li>
							</ul>
						</li>
					</ul>
				</nav>
				<div class="button-nav">
					<button class="search-collapse-btn"><i class="fa fa-search"></i></button>
					<button class="nav-collapse-btn"><i class="fa fa-bars"></i></button>
					<div class="search-form">
						<form method="POST">
							<input id="searchString" class="input" type="text" name="search" placeholder="Search">
						</form>
					</div>
				</div>
			</div>
		</div>
		<!-- /Nav Header -->
	</header>
	<!-- /Header -->
	<div class="card shadow">
		<table class="table table-hover">
			{{#if this.error}}
			<div class="alert alert-danger" role="alert">
				Không có giá trị.
			</div>
			{{else}}
			{{#if isUser}}
			<thead>
				<tr>
					<th scope="col" class="text-center">#</th>
					<th scope="col">Users</th>
					<th scope="col" class="text-right">
						<a class="btn btn-outline-success" href="/admin/users/adduser" role="button">
							<i class="fa fa-plus" aria-hidden="true"></i>
							Thêm User
						</a>
					</th>
				</tr>
			</thead>
			<tbody>
				{{#each this.user}}
				<tr>
					<th scope="row" class="text-center">{{id_User}}</th>
					<td>{{username}}</td>
					<td class="text-right">
						<a class="btn btn-primary btn-sm" href="/admin/users/edit/{{id_User}}" role="button">
							<i class="fa fa-pencil" aria-hidden="true"></i>
						</a>
					</td>
				</tr>
				{{/each}}
			</tbody>
			{{/if}}

			{{#if isSub}}
			<thead>
				<tr>
					<th scope="col" class="text-center">#</th>
					<th scope="col">Subscribers</th>
					<th scope="col">Ngày hết hạn</th>
					<th>Gia hạn</th>
					<th scope="col" class="text-right">
						<a class="btn btn-outline-success" href="/admin/users/addsub" role="button">
							<i class="fa fa-plus" aria-hidden="true"></i>
							Thêm Subscriber
						</a>
					</th>
				</tr>
			</thead>
			<tbody>
				{{#each this.user}}
				<tr>
					<th scope="row" class="text-center">{{id_User}}</th>
					<td>{{username}}</td>
					<td>{{HSD}}</td>
					<td>
						<form method="POST" action="/admin/users/subscriber/{{id_User}}">
							<button class="btn btn-primary btn-sm" type="submit">
								<i class="fa fa-plus" aria-hidden="true"></i>
							</button>
						</form>
					</td>
					<td class="text-right">
						<a class="btn btn-primary btn-sm" href="/admin/users/edit/{{id_User}}" role="button">
							<i class="fa fa-pencil" aria-hidden="true"></i>
						</a>
					</td>
				</tr>
				{{/each}}
			</tbody>
			{{/if}}

			{{#if isWriter}}
			<thead>
				<tr>
					<th scope="col" class="text-center">#</th>
					<th scope="col">Writers</th>
					<th scope="col" class="text-right">
						<a class="btn btn-outline-success" href="/admin/users/addwriter" role="button">
							<i class="fa fa-plus" aria-hidden="true"></i>
							Thêm Writer
						</a>
					</th>
				</tr>
			</thead>
			{{#each this.user}}
			<tr>
				<th scope="row" class="text-center">{{id_User}}</th>
				<td>{{username}}</td>
				<td class="text-right">
					<a class="btn btn-primary btn-sm" href="/admin/users/edit/{{id_User}}" role="button">
						<i class="fa fa-pencil" aria-hidden="true"></i>
					</a>
				</td>
			</tr>
			{{/each}}
			{{/if}}

			{{#if isEditor}}
			<thead>
				<tr>
					<th scope="col" class="text-center">#</th>
					<th scope="col">Editors</th>
					<th scope="col" class="text-right">
						<a class="btn btn-outline-success" href="/admin/users/addeditor" role="button">
							<i class="fa fa-plus" aria-hidden="true"></i>
							Thêm Editor
						</a>
					</th>
				</tr>
			</thead>
			{{#each this.user}}
			<tr>
				<th scope="row" class="text-center">{{id_User}}</th>
				<td>{{username}}</td>
				<td class="text-right">
					<a class="btn btn-primary btn-sm" href="/admin/users/edit/{{id_User}}" role="button">
						<i class="fa fa-pencil" aria-hidden="true"></i>
					</a>
				</td>
			</tr>
			{{/each}}
			{{/if}}
			{{/if}}
		</table>
	</div>

	<div class="row">
		<div class="col-sm-12">
			<nav aria-label="...">
				<ul class="pagination">
					<li class="page-item disabled">
						<a class="page-link" href="#" tabindex="-1">Previous</a>
					</li>
					{{#each this.pages}}
					{{#if active}}
					<li class="page-item active">
						<a class="page-link" href="javascript:;">{{value}} <span class="sr-only">(current)</span></a>
					</li>
					{{else}}
					<li class="page-item"><a class="page-link" href="?page={{value}}">{{value}}</a></li>
					{{/if}}

					{{/each}}
					{{!--<li class="page-item active">
							<a class="page-link" href="#">2 <span class="sr-only">(current)</span></a>
						</li>--}}
					<li class="page-item">
						<a class="page-link" href="#">Next</a>
					</li>
				</ul>
			</nav>
		</div>
	</div>

	<!-- Back to top -->
	<div id="back-to-top"></div>
	<!-- Back to top -->

	<!-- jQuery Plugins -->
	<script src="/js/jquery.min.js"></script>
	<script src="/js/bootstrap.min.js"></script>
	<script src="/js/owl.carousel.min.js"></script>
	<script src="/js/main.js"></script>
</body>

</html>