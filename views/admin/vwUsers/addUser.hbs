		  <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
		  <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
		<![endif]-->
</head>

<body>
    <header id="header">
        <!-- Top Header -->
        <div id="top-header">
            <div class="container">
                <div class="header-links">
                    <ul>
                        <li><a href="/about">About us</a></li>
                        <li><a href="/contact">Contact</a></li>

                        <li><a href="/privacy">Privacy</a></li>
                        <li>
                            <form id="frmSignout" action="/account/logout" method="POST"></form>
                        </li>
                        {{#if isAuthenticated}}
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                                data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Hi, <b>{{authUser.username}}</b>
                            </a>
                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" href="/account/profile">
                                    <i class="fa fa-user" aria-hidden="true"></i>
                                    Profile
                                </a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="javascript: $('#frmSignout').submit();">
                                    <i class="fa fa-sign-out" aria-hidden="true"></i>
                                    Sign Out
                                </a>
                            </div>
                        </li>
                        {{else}}
                        <li class="nav-item">
                        <li><a href="/account/signup"><i class="fa fa-user-plus"></i> SignUp</a></li>
                        </li>
                        <li class="nav-item">
                        <li><a href="/account/login"><i class="fa fa-sign-in"></i> LogIn</a></li>
                        </li>
                        {{/if}}
                    </ul>
                </div>
                <div class="header-social">
                    <ul>
                        <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                        <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                        <li><a href="#"><i class="fa fa-google-plus"></i></a></li>
                        <li><a href="#"><i class="fa fa-instagram"></i></a></li>
                        <li><a href="#"><i class="fa fa-youtube"></i></a></li>
                    </ul>
                </div>
            </div>
        </div>
        <!-- /Top Header -->

        <!-- Center Header -->
        <div id="center-header">
            <div class="container">
                <div class="header-logo">
                    <a href="/home" class="logo"><img src="/img/th16.png" alt="" width="182px" height="274px"></a>
                </div>

            </div>
        </div>
        <!-- /Center Header -->

        <!-- Nav Header -->
        <div id="nav-header">
            <div class="container">
                <nav id="main-nav">
                    <div class="nav-logo">
                        <a href="/home" class="logo"><img src="/img/logo-alt.png" alt=""></a>
                    </div>
                    <ul class="main-nav nav navbar-nav">
                        <li><a href="/admin/categories">Chuyên mục</a></li>
                        <li><a href="/admin/tags">Tag</a></li>
                        <li><a href="/admin/posts">Bài viết</a></li>
                        <li>
                            <a href="/admin/users" data-toggle="dropdown">Người dùng <span
                                    class="fa fa-caret-down"></span></a>
                            <ul class="dropdown-menu" aria-labelledby="dLabel">
                                <li class="dropdown-li"><a href="/admin/users/writer">Writer</a></li>
                                <li class="dropdown-li"><a href="/admin/users/editor">Editor</a></li>
                                <li class="dropdown-li"><a href="/admin/users/subscriber">Subscriber</a></li>
                                <li class="dropdown-li"><a href="/admin/users/user">User</a></li>
                            </ul>
                        </li>
                    </ul>
                </nav>
                <div class="button-nav">
                    <button class="search-collapse-btn"><i class="fa fa-search"></i></button>
                    <button class="nav-collapse-btn"><i class="fa fa-bars"></i></button>
                    <div class="search-form">
                        <form method="POST">
                            <input id="searchString" class="input" type="text" name="search" placeholder="Search">
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- /Nav Header -->
    </header>
    <!-- /Header -->
    <div class="container">
        <div class="card shadow">
            <div class="card-body">
                <form method="POST" id="addUsersForm">
                    {{#if isUser}}
                    <h4 class="card-header text-center">
                        Thêm User
                    </h4>
                    <div class="form-group">
                        <label for="txtName">Tài khoản</label>
                        <input type="text" class="form-control" id="txtName" name="username" autofocus
                            placeholder="Nhập tài khoản">
                    </div>
                    <div class="form-group">
                        <label for="txtEmail">Email</label>
                        <input type="text" class="form-control" id="txtEmail" name="email" placeholder="Nhập email">
                    </div>
                    <div class="form-group">
                        <label for="txtPassword">Mật khẩu</label>
                        <input type="password" class="form-control" id="txtPassword" name="password"
                            placeholder="Nhập mật khẩu">
                    </div>
                    <div class="form-group">
                        <label for="txtConfirm">Xác nhận mật khẩu</label>
                        <input type="password" class="form-control" id="txtConfirm" name="confirm"
                            placeholder="Nhập xác nhận mật khẩu">
                    </div>
                    <div class="form-group">
                        <label for="txtDOB">Day of birth</label>
                        <input type="text" class="form-control" id="txtDOB" name="dob">
                    </div>
                    <a class="btn btn-primary" href="/admin/users/user" role="button">
                        <i class="fa fa-backward" aria-hidden="true"></i>
                        Danh sách
                    </a>
                    {{/if}}

                    {{#if isSub}}
                    <h4 class="card-header text-center">
                        Thêm Subscriber
                    </h4>
                    <div class="form-group">
                        <label for="txtName">Tài khoản</label>
                        <input type="text" class="form-control" id="txtName" name="username" autofocus
                            placeholder="Nhập tên tài khoản">
                    </div>
                    <div class="form-group">
                        <label for="txtEmail">Email</label>
                        <input type="text" class="form-control" id="txtEmail" name="email" placeholder="Nhập email">
                    </div>
                    <div class="form-group">
                        <label for="txtPassword">Mật khẩu</label>
                        <input type="password" class="form-control" id="txtPassword" name="password"
                            placeholder="Nhập mật khẩu">
                    </div>
                    <div class="form-group">
                        <label for="txtConfirm">Xác nhận mật khẩu</label>
                        <input type="password" class="form-control" id="txtConfirm" name="confirm"
                            placeholder="Nhập xác nhận mật khẩu">
                    </div>
                    <div class="form-group">
                        <label for="txtDOB">Ngày sinh</label>
                        <input type="text" class="form-control" id="txtDOB" name="dob">
                    </div>
                    <div class="form-group">
                        <label for="txtEXP">Hạn sử dụng</label>
                        <input type="text" class="form-control" id="txtEXP" name="exp">
                    </div>
                    <a class="btn btn-primary" href="/admin/users/subscriber" role="button">
                        <i class="fa fa-backward" aria-hidden="true"></i>
                        Danh sách
                    </a>
                    {{/if}}

                    {{#if isWriter}}
                    <h4 class="card-header text-center">
                        Thêm Writer
                    </h4>
                    <div class="form-group">
                        <label for="txtName">Tên tài khoản</label>
                        <input type="text" class="form-control" id="txtName" name="username" autofocus
                            placeholder="Nhập tên tài khoản">
                    </div>
                    <div class="form-group">
                        <label for="txtEmail">Email</label>
                        <input type="text" class="form-control" id="txtEmail" name="email" placeholder="Nhập email">
                    </div>
                    <div class="form-group">
                        <label for="txtPassword">Mật khẩu</label>
                        <input type="password" class="form-control" id="txtPassword" name="password"
                            placeholder="Mật khẩu">
                    </div>
                    <div class="form-group">
                        <label for="txtConfirm">Xác nhận mật khẩu</label>
                        <input type="password" class="form-control" id="txtConfirm" name="confirm"
                            placeholder="Xác nhận mật khẩu">
                    </div>
                    <div class="form-group">
                        <label for="txtDOB">Ngày sinh</label>
                        <input type="text" class="form-control" id="txtDOB" name="dob">
                    </div>
                    <div class="form-group">
                        <label for="txtPseudonym">Bút danh</label>
                        <input type="text" class="form-control" id="txtPseudonym" name="pseudonym"
                            placeholder="Nhập bút danh">
                    </div>
                    <a class="btn btn-primary" href="/admin/users/writer" role="button">
                        <i class="fa fa-backward" aria-hidden="true"></i>
                        Danh sách
                    </a>
                    {{/if}}

                    {{#if isEditor}}
                    <h4 class="card-header text-center">
                        Thêm Editor
                    </h4>
                    <div class="form-group">
                        <label for="txtName">Tên tài khoản</label>
                        <input type="text" class="form-control" id="txtName" name="username" autofocus
                            placeholder="Nhập tên tài khoản">
                    </div>
                    <div class="form-group">
                        <label for="txtEmail">Email</label>
                        <input type="text" class="form-control" id="txtEmail" name="email" placeholder="Nhập email">
                    </div>
                    <div class="form-group">
                        <label for="txtPassword">Mật khẩu</label>
                        <input type="password" class="form-control" id="txtPassword" name="password"
                            placeholder="Nhập mật khẩu">
                    </div>
                    <div class="form-group">
                        <label for="txtConfirm">Nhập lại mật khẩu</label>
                        <input type="password" class="form-control" id="txtConfirm" name="confirm"
                            placeholder="Xác nhận mật khẩu">
                    </div>
                    <div class="form-group">
                        <label for="txtDOB">Day of birth</label>
                        <input type="text" class="form-control" id="txtDOB" name="dob">
                    </div>
                    <a class="btn btn-primary" href="/admin/users/editor" role="button">
                        <i class="fa fa-backward" aria-hidden="true"></i>
                        Danh sách
                    </a>
                    {{/if}}

                    <button type="submit" class="btn btn-success">
                        <i class="fa fa-check" aria-hidden="true"></i>
                        Lưu
                    </button>
                </form>
            </div>
        </div>
    </div>

    <!-- Back to top -->
    <div id="back-to-top"></div>
    <!-- Back to top -->

    <!-- jQuery Plugins -->
    <script src="/js/jquery.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/owl.carousel.min.js"></script>
    <script src="/js/main.js"></script>
    <script
        src="https://cdnjs.cloudflare.com/ajax/libs/jquery-datetimepicker/2.5.20/jquery.datetimepicker.full.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.0/jquery.validate.min.js"></script>
    <script>
        $(function () {
            $('#txtDOB').datetimepicker({
                format: 'd/m/Y',
                timepicker: false,
                mask: true,
            });

            $('#txtEXP').datetimepicker({
                format: 'd/m/Y',
                timepicker: false,
                mask: true,
            });

            $('#addUsersForm').validate({
                rules: {
                    username: {
                        required: true,
                        remote: {
                            url: '/admin/users/is-available'
                        }
                    },
                    password: {
                        required: true,
                        minlength: 6
                    },
                    confirm: {
                        required: true,
                        equalTo: $('[name="password"]')
                    },
                    email: {
                        required: true,
                        email: true
                    },
                    dob: {
                        required: true
                    },
                    pseudonym: {
                        required: true
                    }
                },
                messages: {
                    username: {
                        required: 'Chưa nhập tài khoản.',
                        remote: 'Tên tài khoản đã tồn tại.'
                    },
                    password: {
                        required: 'Chưa nhập mật khẩu.',
                        minlength: 'Mật khẩu phải tối thiểu 6 kí tự.'
                    },
                    confirm: {
                        required: 'Chưa nhập lại mật khẩu.',
                        equalTo: 'Mật khẩu không đúng.'
                    },
                    email: {
                        required: 'Chưa nhập email.',
                        email: 'Chưa nhập đúng email.'
                    },
                    dob: {
                        required: 'Không có giá trị ngày sinh.',
                    },
                    pseudonym: {
                        required: 'Không có giá trị bút danh.'
                    }
                },
                errorElement: 'small',
                errorClass: 'help-block text-danger',
                highlight: function (e) {
                    $(e).removeClass('is-valid').addClass('is-invalid');
                },
                unhighlight: function (e) {
                    $(e).removeClass('is-invalid').addClass('is-valid');
                }
            });
        })
    </script>
</body>

</html>