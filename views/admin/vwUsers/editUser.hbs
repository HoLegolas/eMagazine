<!DOCTYPE html>
<html lang=en>

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->

    <title>Báo Điện Tử TH16-News</title>

    <!-- Google font -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:400,700%7CLato:300,400" rel="stylesheet">

    <!-- Bootstrap -->
    <link type="text/css" rel="stylesheet" href="/css/bootstrap.min.css" />

    <!-- Owl Carousel -->
    <link type="text/css" rel="stylesheet" href="/css/owl.carousel.css" />
    <link type="text/css" rel="stylesheet" href="css/owl.theme.default.css" />

    <!-- Font Awesome Icon -->
    <link rel="stylesheet" href="/css/font-awesome.min.css">

    <!-- Custom stlylesheet -->
    <link type="text/css" rel="stylesheet" href="/css/style.css" />
    <link rel="stylesheet" type="text/css" href="/css/administrator_category.css">
    <script src="/ckeditor/ckeditor.js"></script>



    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
		  <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
		  <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
		<![endif]-->
</head>

<body>
    <header id="header">
        <!-- Top Header -->
        <div id="top-header">
            <div class="container">
                <div class="header-links">
                    <ul>
                        <li><a href="/about">About us</a></li>
                        <li><a href="/contact">Contact</a></li>

                        <li><a href="/privacy">Privacy</a></li>
                        <li>
                            <form id="frmSignout" action="/account/logout" method="POST"></form>
                        </li>
                        {{#if isAuthenticated}}
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                                data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Hi, <b>{{authUser.username}}</b>
                            </a>
                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" href="/account/profile">
                                    <i class="fa fa-user" aria-hidden="true"></i>
                                    Profile
                                </a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="javascript: $('#frmSignout').submit();">
                                    <i class="fa fa-sign-out" aria-hidden="true"></i>
                                    Sign Out
                                </a>
                            </div>
                        </li>
                        {{else}}
                        <li class="nav-item">
                        <li><a href="/account/signup"><i class="fa fa-user-plus"></i> SignUp</a></li>
                        </li>
                        <li class="nav-item">
                        <li><a href="/account/login"><i class="fa fa-sign-in"></i> LogIn</a></li>
                        </li>
                        {{/if}}
                    </ul>
                </div>
                <div class="header-social">
                    <ul>
                        <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                        <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                        <li><a href="#"><i class="fa fa-google-plus"></i></a></li>
                        <li><a href="#"><i class="fa fa-instagram"></i></a></li>
                        <li><a href="#"><i class="fa fa-youtube"></i></a></li>
                    </ul>
                </div>
            </div>
        </div>
        <!-- /Top Header -->

        <!-- Center Header -->
        <div id="center-header">
            <div class="container">
                <div class="header-logo">
                    <a href="/home" class="logo"><img src="/img/th16.png" alt="" width="182px" height="274px"></a>
                </div>

            </div>
        </div>
        <!-- /Center Header -->

        <!-- Nav Header -->
        <div id="nav-header">
            <div class="container">
                <nav id="main-nav">
                    <div class="nav-logo">
                        <a href="/home" class="logo"><img src="/img/logo-alt.png" alt=""></a>
                    </div>
                    <ul class="main-nav nav navbar-nav">
                        <li><a href="/admin/categories">Chuyên mục</a></li>
                        <li><a href="/admin/tags">Tag</a></li>
                        <li><a href="/admin/posts">Bài viết</a></li>
                        <li>
                            <a href="/admin/users" data-toggle="dropdown">Người dùng <span
                                    class="fa fa-caret-down"></span></a>
                            <ul class="dropdown-menu" aria-labelledby="dLabel">
                                <li class="dropdown-li"><a href="/admin/users/writer">Writer</a></li>
                                <li class="dropdown-li"><a href="/admin/users/editor">Editor</a></li>
                                <li class="dropdown-li"><a href="/admin/users/subscriber">Subscriber</a></li>
                                <li class="dropdown-li"><a href="/admin/users/user">User</a></li>
                            </ul>
                        </li>
                    </ul>
                </nav>
                <div class="button-nav">
                    <button class="search-collapse-btn"><i class="fa fa-search"></i></button>
                    <button class="nav-collapse-btn"><i class="fa fa-bars"></i></button>
                    <div class="search-form">
                        <form method="POST">
                            <input id="searchString" class="input" type="text" name="search" placeholder="Search">
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- /Nav Header -->
    </header>
    <!-- /Header -->
    <div class="container">
        <div class="card shadow">
            <h4 class="card-header text-center">
                Sửa thông tin
            </h4>
            <div class="card-body">
                {{#if this.error}}
                <div class="alert alert-danger" role="alert">
                    Không có giá trị. <a href="/admin/users/user" class="alert-link">Go back</a>.
                </div>
                {{else}}

                {{#if isUser}}
                <form method="POST" action="/admin/users/updateuser">
                    <div class="form-group">
                        <label for="txtCatID">#</label>
                        <input readonly type="text" class="form-control" id="txtCatID" name="id_User"
                            value="{{this.user.id_User}}">
                    </div>
                    <div class="form-group">
                        <label for="txtCatName">Tài khoản</label>
                        <input type="text" class="form-control" id="txtCatName" name="username" autofocus
                            placeholder="Enter category name" value="{{this.user.username}}">
                    </div>
                    <div class="form-group">
                        <label for="txtEmail">Email</label>
                        <input type="text" class="form-control" id="txtEmail" name="email"
                            placeholder="Enter category name" value="{{this.user.email}}">
                    </div>
                    <a class="btn btn-primary" href="/admin/users/user" role="button">
                        <i class="fa fa-backward" aria-hidden="true"></i>
                        Danh sách
                    </a>
                    <button type="submit" class="btn btn-outline-danger" formaction="/admin/users/deleteuser">
                        <i class="fa fa-trash-o" aria-hidden="true"></i>
                        Xoá
                    </button>
                    <button type="submit" class="btn btn-success">
                        <i class="fa fa-check" aria-hidden="true"></i>
                        Lưu
                    </button>
                </form>
                {{/if}}

                {{#if isSub}}
                <form method="POST" action="/admin/users/updatesub">
                    <div class="form-group">
                        <label for="txtCatID">#</label>
                        <input readonly type="text" class="form-control" id="txtCatID" name="id_User"
                            value="{{this.user.id_User}}">
                    </div>
                    <div class="form-group">
                        <label for="txtCatName">Tài khoản</label>
                        <input type="text" class="form-control" id="txtCatName" name="username" autofocus
                            placeholder="Enter category name" value="{{this.user.username}}">
                    </div>
                    <div class="form-group">
                        <label for="txtEmail">Email</label>
                        <input type="text" class="form-control" id="txtEmail" name="email"
                            placeholder="Enter category name" value="{{this.user.email}}">
                    </div>
                    <a class="btn btn-primary" href="/admin/users/subscriber" role="button">
                        <i class="fa fa-backward" aria-hidden="true"></i>
                        Danh sách
                    </a>
                    <button type="submit" class="btn btn-outline-danger" formaction="/admin/users/deletesub">
                        <i class="fa fa-trash-o" aria-hidden="true"></i>
                        Xoá
                    </button>
                    <button type="submit" class="btn btn-success">
                        <i class="fa fa-check" aria-hidden="true"></i>
                        Lưu
                    </button>
                </form>
                {{/if}}

                {{#if isWriter}}
                <form method="POST" action="/admin/users/updatewriter">
                    <div class="form-group">
                        <label for="txtCatID">#</label>
                        <input readonly type="text" class="form-control" id="txtCatID" name="id_User"
                            value="{{this.user.id_User}}">
                    </div>
                    <div class="form-group">
                        <label for="txtCatName">Tài khoản</label>
                        <input type="text" class="form-control" id="txtCatName" name="username" autofocus
                            value="{{this.user.username}}">
                    </div>
                    <div class="form-group">
                        <label for="txtEmail">Email</label>
                        <input type="text" class="form-control" id="txtEmail" name="email" value="{{this.user.email}}">
                    </div>
                    <div class="form-group">
                        <label for="txtPseudonym">Bút danh</label>
                        <input type="text" class="form-control" id="txtPseudonym" name="pseudonym"
                            value="{{this.user.pseudonym}}">
                    </div>
                    <a class="btn btn-primary" href="/admin/users/writer" role="button">
                        <i class="fa fa-backward" aria-hidden="true"></i>
                        Danh sách
                    </a>
                    <button type="submit" class="btn btn-outline-danger" formaction="/admin/users/deletewriter">
                        <i class="fa fa-trash-o" aria-hidden="true"></i>
                        Xoá
                    </button>
                    <button type="submit" class="btn btn-success">
                        <i class="fa fa-check" aria-hidden="true"></i>
                        Lưu
                    </button>
                </form>
                {{/if}}

                {{#if isEditor}}
                <form method="POST" action="/admin/users/updateeditor">
                    <div class="form-group">
                        <label for="txtCatID">#</label>
                        <input readonly type="text" class="form-control" id="txtCatID" name="id_User"
                            value="{{this.user.id_User}}">
                    </div>
                    <div class="form-group">
                        <label for="txtCatName">Tài khoản</label>
                        <input type="text" class="form-control" id="txtCatName" name="username" autofocus
                            placeholder="Enter category name" value="{{this.user.username}}">
                    </div>
                    <div class="form-group">
                        <label for="txtEmail">Email</label>
                        <input type="text" class="form-control" id="txtEmail" name="email"
                            placeholder="Enter category name" value="{{this.user.email}}">
                    </div>
                    <div class="form-group">
                        <label for="category">Chuyên mục</label>
                        <select class="form-control" id="categorySelect" name="categorySelect">
                            <option selected>{{this.user.category}}</option>
                            <option>Nông sản</option>
                            <option>Hải sản</option>
                            <option>Chính tri</option>
                            <option>Giáo dục</option>
                        </select>
                    </div>
                    <a class="btn btn-primary" href="/admin/users/editor" role="button">
                        <i class="fa fa-backward" aria-hidden="true"></i>
                        Danh sách
                    </a>
                    <button type="submit" class="btn btn-outline-danger" formaction="/admin/users/deleteeditor">
                        <i class="fa fa-trash-o" aria-hidden="true"></i>
                        Xoá
                    </button>
                    <button type="submit" class="btn btn-success">
                        <i class="fa fa-check" aria-hidden="true"></i>
                        Lưu
                    </button>
                </form>
                {{/if}}
                {{/if}}
            </div>
        </div>
    </div>

    <!-- Back to top -->
    <div id="back-to-top"></div>
    <!-- Back to top -->

    <!-- jQuery Plugins -->
    <script src="/js/jquery.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/owl.carousel.min.js"></script>
    <script src="/js/main.js"></script>
</body>

</html>