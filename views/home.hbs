{{#section 'css'}}
<style>
	h1 {
		font-size: 1em;
	}

	.post {
		display: flex;
		flex-wrap: wrap;
	}

</style>
{{/section}}


<!-- Owl Carousel 1 -->
<div id="owl-carousel-1" class="owl-carousel owl-theme center-owl-nav">
	{{#each this.top3.posts}}
	<!-- ARTICLE -->
	<article class="article thumb-article">
		<div class="article-img">
			<img src="/img/{{category}}/{{postid}}/{{postid}}-large.jpg" alt="">
		</div>
		<div class="article-body">
			<ul class="article-info">
				<li class="article-category"><a href="/top">Nổi bật</a></li>
				<li class="article-type"><i class="fa fa-file-text"></i></li>
			</ul>
			<h2 class="article-title"><a href="/post/{{postid}}">{{title}}</a></h2>
			<ul class="article-meta">
				<li><i class="fa fa-clock-o"></i> {{date}} </li>
				<li><i class="fa fa-comments"></i> 33</li>
			</ul>
		</div>
	</article>
	<!-- /ARTICLE -->
	{{/each}}
</div>
<!-- /Owl Carousel 1 -->


<!-- SECTION -->
<div class="section">
	<!-- CONTAINER -->
	<div class="container">
		<!-- ROW -->
		<div class="row">
			<!-- Main Column -->
			<div class="col-md-12">
				<!-- section title -->
				<div class="section-title">
					<h2 class="title">Xem nhiều nhất</h2>
					<!-- tab nav -->
					
					<ul class="tab-nav pull-right">
						<li class="active"><a data-toggle="tab" href="#all">All</a></li>
					</ul>
					
					<!-- /tab nav -->
				</div>
				<!-- /section title -->

				<!-- Tab content -->
				<div class="tab-content">
					<!-- tab1 -->
					<div id="all" class="tab-pane fade in active post">
						<!-- row -->
						<div class="row post">
							{{#each this.view10.posts}}
							<!-- Column 1 -->
							<div class="col-md-3 col-sm-6 post">
								<!-- ARTICLE -->
								<article class="article">
									<div class="article-img">
										<a href="/post/{{postid}}">
											<img src="/img/{{category}}/{{postid}}/{{postid}}-small.jpg" alt="">
										</a>
										<ul class="article-info">
											<li class="article-type"><i class="fa fa-camera"></i></li>
										</ul>
									</div>
									<div class="article-body">
										<h4 class="article-title"><a href="/post/{{postid}}">{{title}}</a>
										</h4>
										<ul class="article-meta">
											<li><i class="fa fa-clock-o"></i>{{date}}</li>
											<li><i class="fa fa-comments"></i> 33</li>
										</ul>
									</div>
								</article>
								<!-- /ARTICLE -->
							</div>
							{{/each}}
							<!-- /Column 1 -->
						</div>
						<!-- /row -->	
					</div>
					<!-- /tab1 -->
				</div>
				<!-- /tab content -->
			</div>
			<!-- /Main Column -->
		</div>
		<!-- /ROW -->
	</div>
	<!-- /CONTAINER -->
</div>
<!-- /SECTION -->

