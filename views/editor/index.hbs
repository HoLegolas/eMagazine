<!-- SECTION -->
<div class="section">
	<!-- CONTAINER -->
	<div class="container">
		<!-- ROW -->
		<div class="row">
			<!-- Main Column -->
			<div class="col-md-12">
				<!-- section title -->
				<div class="section-title">
					<h2 class="title">Draft</h2>
					<button class="title">Xem thêm</button>
					<!-- tab nav -->

					<!-- /tab nav -->
				</div>
				<!-- /section title -->

				<!-- Tab content -->
				<div class="tab-content">
					<!-- tab1 -->
					<div id="tab1" class="tab-pane fade in active">
						<!-- row -->
						<div class="row">
							{{#each this.post3}}
							<!-- Column 1 -->
							<div class="col-md-3 col-sm-6">
								<!-- ARTICLE -->
								<article class="article">
									<div class="article-img">
										<a href="/post/{{postid}}">
											<img src="/img/{{category}}/{{postid}}/{{postid}}-small.jpg" alt="">
										</a>
										<ul class="article-info">
											<li class="article-type">
												<i class="fa fa-camera"></i>
											</li>
										</ul>
									</div>
									<div class="article-body">
										<h4 class="article-title"><a href="/post/{{postid}}">{{{title}}}</a></h4>
										<ul class="article-meta">
											<a href="/editor/edit/{{postid}}"><i class="fa fa-check"></i><i>
													Duyệt</i></a>

											<button type="button" class="btn btn-danger" data-toggle="modal"
												data-target="#exampleModal">Từ chối</button>

											<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog"
												aria-labelledby="exampleModalLabel" aria-hidden="true">
												<div class="modal-dialog" role="document">
													<div class="modal-content">
														<div class="modal-header">
															<h5 class="modal-title" id="exampleModalLabel">Thông báo
															</h5>
															<button type="button" class="close" data-dismiss="modal"
																aria-label="Close">
																<span aria-hidden="true">&times;</span>
															</button>
														</div>
														<form method="POST">

															<div class="modal-body">

																<div class="form-group">
																	<label for="recipient-name"
																		class="col-form-label">PostID:</label>
																	<input type="text" name="postid"
																		class="form-control" id="recipient-name"
																		value="{{postid}}">
																</div>

																<div class="form-group">
																	<label for="recipient-name"
																		class="col-form-label">Người nhận:</label>
																	<input type="text" name="username"
																		class="form-control" id="recipient-name"
																		value="{{authUser.username}}">
																</div>
																<div class="form-group">
																	<label for="message-text" class="col-form-label">Lý
																		do:</label>
																	<textarea class="input" name="reason"
																		id="message-text"
																		placeholder="reasons"></textarea>
																</div>

															</div>
															<div class="modal-footer">
																<button type="button" class="btn btn-secondary"
																	data-dismiss="modal">Đóng</button>
																<button type="submit"
																	class="btn btn-success">Gửi</button>
															</div>
														</form>

													</div>
												</div>
											</div>
										</ul>
									</div>
								</article>
								<!-- /ARTICLE -->
							</div>
							{{/each}}
							<!-- /Column 1 -->
						</div>
						<!-- /row -->
					</div>
				</div>
				<!-- /tab content -->
			</div>
			<!-- /Main Column -->
		</div>
		<!-- /ROW -->
	</div>
	<!-- /CONTAINER -->
</div>
<!-- /SECTION -->
<script>
	('#exampleModal').on('show.bs.modal', function (event) {
		var button = $(event.relatedTarget) // Button that triggered the modal
		var recipient = button.data('whatever') // Extract info from data-* attributes
		// If necessary, you could initiate an AJAX request here (and then do the updating in a callback).
		// Update the modal's content. We'll use jQuery here, but you could use a data binding library or other methods instead.
		var modal = $(this)
		modal.find('.modal-title').text('New message to ' + recipient)
		modal.find('.modal-body input').val(recipient)
	})
</script>