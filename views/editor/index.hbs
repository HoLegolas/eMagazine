<!DOCTYPE html>
<html lang=en>

<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->

	<title>Báo Điện Tử TH16-News</title>

	<!-- Google font -->
	<link href="https://fonts.googleapis.com/css?family=Open+Sans:400,700%7CLato:300,400" rel="stylesheet">

	<!-- Bootstrap -->
	<link type="text/css" rel="stylesheet" href="/css/bootstrap.min.css" />

	<!-- Owl Carousel -->
	<link type="text/css" rel="stylesheet" href="/css/owl.carousel.css" />
	<link type="text/css" rel="stylesheet" href="css/owl.theme.default.css" />

	<!-- Font Awesome Icon -->
	<link rel="stylesheet" href="/css/font-awesome.min.css">

	<!-- Custom stlylesheet -->
	<link type="text/css" rel="stylesheet" href="/css/style.css" />
	<link rel="stylesheet" type="text/css" href="/css/administrator_category.css">
	<script src="/ckeditor/ckeditor.js"></script>



	<!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
	<!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
	<!--[if lt IE 9]>
		  <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
		  <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
		<![endif]-->
</head>

<body>
	<header id="header">
		<!-- Top Header -->
		<div id="top-header">
			<div class="container">
				<div class="header-links">
					<ul>
						<li><a href="/about">About us</a></li>
						<li><a href="/contact">Contact</a></li>

						<li><a href="/privacy">Privacy</a></li>
						<li>
							<form id="frmSignout" action="/account/logout" method="POST"></form>
						</li>
						{{#if isAuthenticated}}
						<li class="nav-item dropdown">
							<a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
								data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
								Hi, <b>{{authUser.username}}</b>
							</a>
							<div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
								<a class="dropdown-item" href="/account/profile">
									<i class="fa fa-user" aria-hidden="true"></i>
									Profile
								</a>
								<div class="dropdown-divider"></div>
								<a class="dropdown-item" href="javascript: $('#frmSignout').submit();">
									<i class="fa fa-sign-out" aria-hidden="true"></i>
									Sign Out
								</a>
							</div>
						</li>
						{{else}}
						<li class="nav-item">
						<li><a href="/account/signup"><i class="fa fa-user-plus"></i> SignUp</a></li>
						</li>
						<li class="nav-item">
						<li><a href="/account/login"><i class="fa fa-sign-in"></i> LogIn</a></li>
						</li>
						{{/if}}
					</ul>
				</div>
				<div class="header-social">
					<ul>
						<li><a href="#"><i class="fa fa-facebook"></i></a></li>
						<li><a href="#"><i class="fa fa-twitter"></i></a></li>
						<li><a href="#"><i class="fa fa-google-plus"></i></a></li>
						<li><a href="#"><i class="fa fa-instagram"></i></a></li>
						<li><a href="#"><i class="fa fa-youtube"></i></a></li>
					</ul>
				</div>
			</div>
		</div>
		<!-- /Top Header -->

		<!-- Center Header -->
		<div id="center-header">
			<div class="container">
				<div class="header-logo">
					<a href="/home" class="logo"><img src="/img/th16.png" alt="" width="182px" height="274px"></a>
				</div>

			</div>
		</div>
		<!-- /Center Header -->

		<!-- Nav Header -->
		<div id="nav-header">
			<div class="container">
				<nav id="main-nav">
					<div class="nav-logo">
						<a href="/home" class="logo"><img src="/img/logo-alt.png" alt=""></a>
					</div>
					<ul class="main-nav nav navbar-nav">
						<li><a href="/admin/categories">Chuyên mục</a></li>
						<li><a href="/admin/tags">Tag</a></li>
						<li><a href="/admin/posts">Bài viết</a></li>
						<li>
							<a href="/admin/users" data-toggle="dropdown">Người dùng <span
									class="fa fa-caret-down"></span></a>
							<ul class="dropdown-menu" aria-labelledby="dLabel">
								<li class="dropdown-li"><a href="/admin/users/writer">Writer</a></li>
								<li class="dropdown-li"><a href="/admin/users/editor">Editor</a></li>
								<li class="dropdown-li"><a href="/admin/users/subscriber">Subscriber</a></li>
								<li class="dropdown-li"><a href="/admin/users/user">User</a></li>
							</ul>
						</li>
						<li><a href="/editor">Editor</a></li>
						<li>
							<a href="#" data-toggle="dropdown">Writer <span class="fa fa-caret-down"></span></a>
							<ul class="dropdown-menu" aria-labelledby="dLabel">
								<li class="dropdown-li"><a href="/writer/post">Post</a></li>
								<li class="dropdown-li"><a href="/writer/posted/{{authUser.id_User}}">List</a></li>
							</ul>
						</li>
					</ul>
				</nav>
				<div class="button-nav">
					<button class="search-collapse-btn"><i class="fa fa-search"></i></button>
					<button class="nav-collapse-btn"><i class="fa fa-bars"></i></button>
					<div class="search-form">
						<form method="POST">
							<input id="searchString" class="input" type="text" name="search" placeholder="Search">
						</form>
					</div>
				</div>
			</div>
		</div>
		<!-- /Nav Header -->
	</header>
	<!-- SECTION -->
	<div class="section">
		<!-- CONTAINER -->
		<div class="container">
			<!-- ROW -->
			<div class="row">
				<!-- Main Column -->
				<div class="col-md-12">
					<!-- section title -->
					<div class="section-title">
						<h2 class="title">Draft</h2>
						<button class="title">Xem thêm</button>
						<!-- tab nav -->

						<!-- /tab nav -->
					</div>
					<!-- /section title -->

					<!-- Tab content -->
					<div class="tab-content">
						<!-- tab1 -->
						<div id="tab1" class="tab-pane fade in active">
							<!-- row -->
							<div class="row">
								{{#each this.post3}}
								<!-- Column 1 -->
								<div class="col-md-3 col-sm-6">
									<!-- ARTICLE -->
									<article class="article">
										<div class="article-img">
											<a href="/post/{{postid}}">
												<img src="/img/{{category}}/{{postid}}/{{postid}}-small.jpg" alt="">
											</a>
											<ul class="article-info">
												<li class="article-type">
													<i class="fa fa-camera"></i>
												</li>
											</ul>
										</div>
										<div class="article-body">
											<h4 class="article-title"><a href="/post/{{postid}}">{{{title}}}</a></h4>
											<ul class="article-meta">
												<a href="/editor/edit/{{postid}}"><i class="fa fa-check"></i><i>
														Duyệt</i></a>

												<button type="button" class="btn btn-danger" data-toggle="modal"
													data-target="#exampleModal">Từ chối</button>

												<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog"
													aria-labelledby="exampleModalLabel" aria-hidden="true">
													<div class="modal-dialog" role="document">
														<div class="modal-content">
															<div class="modal-header">
																<h5 class="modal-title" id="exampleModalLabel">Thông báo
																</h5>
																<button type="button" class="close" data-dismiss="modal"
																	aria-label="Close">
																	<span aria-hidden="true">&times;</span>
																</button>
															</div>
															<form method="POST">

																<div class="modal-body">

																	<div class="form-group">
																		<label for="recipient-name"
																			class="col-form-label">PostID:</label>
																		<input type="text" name="postid"
																			class="form-control" id="recipient-name"
																			value="{{postid}}">
																	</div>

																	<div class="form-group">
																		<label for="recipient-name"
																			class="col-form-label">State: </label>
																		<input type="text" name="state"
																			class="form-control" id="recipient-name"
																			value="{{state}}">
																	</div>

																	<div class="form-group">
																		<label for="recipient-name"
																			class="col-form-label">Người nhận:</label>
																		<input type="text" name="username"
																			class="form-control" id="recipient-name"
																			value="{{authUser.username}}">
																	</div>
																	<div class="form-group">
																		<label for="message-text"
																			class="col-form-label">Lý
																			do:</label>
																		<textarea class="input" name="reason"
																			id="message-text"
																			placeholder="reasons"></textarea>
																	</div>

																</div>
																<div class="modal-footer">
																	<button type="button" class="btn btn-secondary"
																		data-dismiss="modal">Đóng</button>
																	<button type="submit"
																		class="btn btn-success">Gửi</button>
																</div>
															</form>

														</div>
													</div>
												</div>
											</ul>
										</div>
									</article>
									<!-- /ARTICLE -->
								</div>
								{{/each}}
								<!-- /Column 1 -->
							</div>
							<!-- /row -->
						</div>
					</div>
					<!-- /tab content -->
				</div>
				<!-- /Main Column -->
			</div>
			<!-- /ROW -->
		</div>
		<!-- /CONTAINER -->
	</div>
	<!-- /SECTION -->
	<script>
		('#exampleModal').on('show.bs.modal', function (event) {
			var button = $(event.relatedTarget) // Button that triggered the modal
			var recipient = button.data('whatever') // Extract info from data-* attributes
			// If necessary, you could initiate an AJAX request here (and then do the updating in a callback).
			// Update the modal's content. We'll use jQuery here, but you could use a data binding library or other methods instead.
			var modal = $(this)
			modal.find('.modal-title').text('New message to ' + recipient)
			modal.find('.modal-body input').val(recipient)
		})
	</script>
	<!-- jQuery Plugins -->
	<script src="/js/jquery.min.js"></script>
	<script src="/js/bootstrap.min.js"></script>
	<script src="/js/owl.carousel.min.js"></script>
	<script src="/js/main.js"></script>
</body>

</html>